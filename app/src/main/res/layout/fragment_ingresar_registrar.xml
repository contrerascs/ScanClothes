<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".FragmentosCliente.IngresarRegistrar">

    <!-- TODO: Update blank fragment layout -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:padding="15dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/carga"
            android:layout_marginTop="15dp">

        </androidx.appcompat.widget.AppCompatImageView>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/IngresarCliente"
            android:text="@string/IngresarCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="#08088A">

        </Button>

        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/RegistrarCliente"
            android:text="@string/RegistrarCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="#08088A">

        </Button>

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>